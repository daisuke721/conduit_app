<div class="editor-page">
  <div class="container page">
    <div class="row">
      <div class="col-md-10 offset-md-1 col-xs-12">
        <%= render "shared/error", obj: @conduit %>
        <%= form_with model: @conduit, class: "form" do |f| %>
          <fieldset class="form-group">
            <%= f.text_field :title, class: "form-control form-control-lg", placeholder: "Article Title" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :introduction, class: "form-control", placeholder: "What's this article about?" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_area :context, class: "form-control", rows: 8, placeholder: "Write your article (in markdown)" %>
          </fieldset>
          <fieldset class="form-group">
            <%= f.text_field :tag, class: "form-control", placeholder: " Enter tags " %>
            <div class="tag-list">
              <span class="tag-default tag-pill">
                <i class="ion-close-round">tag</i>
              </span>
            </div>
            <%= f.submit "Publish Article", class: "btn btn-lg pull-xs-right btn-primary" %>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
